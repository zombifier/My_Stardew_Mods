{
  "Format": "2.8.0",
  "ConfigSchema": {
    "DesaturateCloth": {
      "AllowValues": "true, false",
      "Default": "true",
    },
    "DesaturateYarn": {
      "AllowValues": "true, false",
      "Default": "true",
    },
    "ReskinRabbitsFoot": {
      "AllowValues": "true, false",
      "Default": "false",
    },
  },
  "DynamicTokens": [
    {
      "Name": "CodeComponentId",
      "Value": "selph.TextileExpansionCode"
    },
    {
      "Name": "CanEmbroider",
      "Value": "false",
    },
    {
      "Name": "CanEmbroider",
      "Value": "true",
      "When": {
        "Query: {{selph.TextileExpansionCode/TextileBaseLevel}} >= 6": true,
      }
    },
    {
      "Name": "CanJewel",
      "Value": "false"
    },
    {
      "Name": "CanJewel",
      "Value": "true",
      "When": {
        "Query: {{selph.TextileExpansionCode/TextileBaseLevel}} >= 8": true,
      }
    },
  ],
