      "Action": "Load",
      "Target": "{{ModId}}/Objects, {{ModId}}/BigCraftables, {{ModId}}/FeedSign",
      "FromFile": "assets/{{TargetWithoutPath}}.png"
    },
    {
      "Action": "EditImage",
      "Target": "{{ModId}}/Objects",
      "FromFile": "assets/feed_medieval_{{season}}.png",
