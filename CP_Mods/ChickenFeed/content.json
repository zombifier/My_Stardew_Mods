{
  "Format": "2.0.0",
  "ConfigSchema": {
    "SiloResize": {
      "AllowValues": "true, false",
      "Default": "true",
    },
    "FeedSilo": {
      "AllowValues": "true, false",
      "Default": "false",
    },
    "CornucopiaExtendedRecipe": {
      "AllowValues": "true, false",
      "Default": "false",
    },
    "HayCapacity": {
      "AllowValues": "120,180,240,300,360,420,480",
      "Default": 120,
    },
    "FeedCapacity": {
      "AllowValues": "120,180,240,300,360,420,480",
      "Default": 120,
    },
    "FeedStyle": {
      "AllowValues": "default, medieval, lavender, vbr",
      "Default": "default",
    },
  },
